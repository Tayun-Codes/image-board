<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Cat Gallery</title>
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <h1>Cat Gallery</h1>

    <h2>Add A Cat:</h2>
    <form action="/addImage" enctype="multipart/form-data" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Title your cat" name="title">
            <input type="text" class="form-control" placeholder="Describe your picture" name="description">
            <input type="file" class="form-control-file" name="uploaded_file">
            <input type="submit" value="Post your cat!" class="btn btn-default">
        </div>
    </form>

    <% for(let i=0; i < info.length; i++) {%>
        <div class="post">
            <span class="title"> <%= info[i].title %> </span>
            <img src="data:image/jpeg;base64,<%= info[i].src.toString('base64') %>" alt="<%= info[i].description %>" title="<%= info[i].description %>">
            <div class="options">
                <span> <%= info[i].likes %> </span>
                <span><i class="fa fa-heart" aria-hidden="true"></i></span>
                <span><i class='fa fa-trash' aria-hidden="true"></i></span>
            </div>
        </div>
    <% } %>

    <script src="main.js"></script>

</body>

</html>